ARG DISTRO_VERSION=latest
FROM debian:${DISTRO_VERSION}

RUN apt update && apt upgrade -yq && \
      apt install -yq \
      gcc make git autoconf pkg-config texinfo \
      libjpeg-dev libpng-dev libtiff5-dev libgif-dev libxpm-dev \
      libgccjit-12-dev zlib1g-dev libgnutls28-dev libncurses-dev \
      libwayland-dev libxkbcommon-dev libgtk-3-dev \
      checkinstall
